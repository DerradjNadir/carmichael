<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <include layout="@layout/item_file_manager"/>

    <LinearLayout
        android:id="@+id/category_container"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:src="@drawable/download_file"
            android:id="@+id/category_download"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:src="@drawable/delete"
            android:id="@+id/category_delete"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:src="@drawable/encryption"
            android:id="@+id/category_secure"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/hide"
            android:id="@+id/category_hide"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>